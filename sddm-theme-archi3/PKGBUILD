pkgname=sddm-theme-archi3
pkgver=1.0
pkgrel=1
pkgdesc="Minimal SDDM theme with background and i3status bar"
arch=('any')
url="https://github.com/Arch-i3/sddm-theme-archi3.git"
license=('GPL')
depends=('sddm' 'qt6-declarative')
source=('https://github.com/Arch-i3/sddm-theme-archi3')
md5sums=('SKIP')

package() {
  install -d "$pkgdir/usr/share/sddm/themes/archi3"
  cp -r archi3/* "$pkgdir/usr/share/sddm/themes/archi3/"
}
