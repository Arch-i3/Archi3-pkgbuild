# Maintainer: Kabir Kwatra <kabir@kwatra.me>

pkgname=grub-theme-archi3
#_theme=archi3
pkgver=r46.5822f7e
pkgrel=1
pkgdesc="Archi3 GRUB theme"
url='https://github.com/Arch-i3/grub-theme-archi3'
arch=('any')
license=('GPL')
depends=('grub')
makedepends=('git')
install=${pkgname}.install
source=("${pkgname}"::"git+https://github.com/Arch-i3/grub-theme-archi3")
md5sums=('SKIP')
pkgver() {
  cd "${pkgname}"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}
package() {
  install -dm 755 "${pkgdir}/usr/share/grub/themes/archi3"
  cp -rf --no-preserve=ownership "${pkgname}/archi3" "${pkgdir}/usr/share/grub/themes/"
}
